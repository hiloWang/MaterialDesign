<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextView">
        <attr name="ctv_textSize" format="dimension"/>
        <attr name="ctv_textViewWidth" format="dimension"/>
        <attr name="ctv_textViewHeight" format="dimension"/>
        <attr name="ctv_backgroundColorPressed" format="color"/>
        <attr name="ctv_backgroundColorSelected" format="color"/>
        <attr name="customTextViewStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MultiSwipeRefreshLayout">
        <attr name="foreground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PullRefreshLayout">
        <attr name="type" format="enum">
            <enum name="material" value="0" />
            <enum name="circles" value="1" />
            <enum name="water_drop" value="2" />
            <enum name="ring" value="3" />
        </attr>
        <attr name="duration" format="reference"/>
        <attr name="colors" format="reference"/>
    </declare-styleable>
</resources>